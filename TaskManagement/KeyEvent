    vkdict.Add "l", vbKeyL
    vkdict.Add "m", vbKeyM
    vkdict.Add "n", vbKeyN
    vkdict.Add "o", vbKeyO
    vkdict.Add "p", vbKeyP
    vkdict.Add "q", vbKeyQ
